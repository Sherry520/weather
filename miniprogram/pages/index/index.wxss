.temp{
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
.weather{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}
.weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.timetips{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}
.timetips-icon{
  height: 28rpx;
  width: 36rpx;
  margin-right: 10rpx;
}
.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}